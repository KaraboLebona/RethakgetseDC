@model DayCareProject.Models.ChildApplication

<div class="container mt-4">
    <h2>Apply for Your Child</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Show summary of all errors at the top -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="Apply" method="post" class="row g-3 needs-validation" novalidate>

        <h4>Child Information</h4>
        <div class="col-md-6">
            <label asp-for="ChildSurname" class="form-label"></label>
            <input asp-for="ChildSurname" class="form-control" />
            <span asp-validation-for="ChildSurname" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ChildFullName" class="form-label"></label>
            <input asp-for="ChildFullName" class="form-control" />
            <span asp-validation-for="ChildFullName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="HomeLanguage" class="form-label"></label>
            <input asp-for="HomeLanguage" class="form-control" />
            <span asp-validation-for="HomeLanguage" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="ResidentialAddress" class="form-label"></label>
            <input asp-for="ResidentialAddress" class="form-control" />
            <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
        </div>

        <h4 class="mt-3">Parent(s)/Guardian Details</h4>
        <div class="col-md-6">
            <label asp-for="ParentFullName" class="form-label"></label>
            <input asp-for="ParentFullName" class="form-control" />
            <span asp-validation-for="ParentFullName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ParentSurname" class="form-label"></label>
            <input asp-for="ParentSurname" class="form-control" />
            <span asp-validation-for="ParentSurname" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Occupation" class="form-label"></label>
            <input asp-for="Occupation" class="form-control" />
            <span asp-validation-for="Occupation" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="WorkTel" class="form-label"></label>
            <input asp-for="WorkTel" class="form-control" />
            <span asp-validation-for="WorkTel" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Cell" class="form-label"></label>
            <input asp-for="Cell" class="form-control" />
            <span asp-validation-for="Cell" class="text-danger"></span>
        </div>

        <h4 class="mt-3">Next of Kin</h4>
        <div class="col-md-4">
            <label asp-for="KinName" class="form-label"></label>
            <input asp-for="KinName" class="form-control" />
            <span asp-validation-for="KinName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="KinSurname" class="form-label"></label>
            <input asp-for="KinSurname" class="form-control" />
            <span asp-validation-for="KinSurname" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="KinRelation" class="form-label"></label>
            <input asp-for="KinRelation" class="form-control" />
            <span asp-validation-for="KinRelation" class="text-danger"></span>
        </div>

  
        <div class="col-12 mt-3 text-start">
            <button type="submit" class="btn btn-primary me-2">Submit Application</button>
            <a asp-controller="Home" asp-action="About" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Enable client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
