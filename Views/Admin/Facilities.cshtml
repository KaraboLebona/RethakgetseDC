@{
}
@{
    ViewData["Title"] = "Facilities - Rethakgetse Day Care";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Our Facilities</h2>
    <p class="text-center mb-5">At Rethakgetse Day Care, we provide a safe, fun, and educational environment for your children.</p>

    <div class="row g-4">
        <!-- Playground -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/images/playground.jpg" class="card-img-top" alt="Playground">
                <div class="card-body">
                    <h5 class="card-title">Playground</h5>
                    <p class="card-text">Our outdoor playground is safe and designed for fun activities that help kids grow physically and socially.</p>
                </div>
            </div>
        </div>

        <!-- Classrooms -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/images/classroom.jpg" class="card-img-top" alt="Classroom">
                <div class="card-body">
                    <h5 class="card-title">Classrooms</h5>
                    <p class="card-text">Bright, clean, and child-friendly classrooms equipped with age-appropriate learning materials.</p>
                </div>
            </div>
        </div>

        <!-- Library -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/images/library.jpg" class="card-img-top" alt="Library">
                <div class="card-body">
                    <h5 class="card-title">Library</h5>
                    <p class="card-text">Our library encourages a love of reading with colorful books and story sessions for children.</p>
                </div>
            </div>
        </div>
    </div>
</div>
